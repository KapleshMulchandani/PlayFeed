<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Dark application theme -->
    <style name="Theme.PlayFeed" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primaryDark</item>
        <item name="colorOnPrimary">@color/onPrimary</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondaryContainer</item>
        <item name="colorOnSecondary">@color/onSecondary</item>


        !-- Text on surfaces for dark theme -->

        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/primaryDark</item> <!-- Ensure dark status bar color -->

        <!-- Text appearance -->
        <item name="android:textColorPrimary">@color/onPrimary</item>
        <item name="android:textColorSecondary">@color/onSecondary</item>

        <!-- Error & Feedback Colors -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/onPrimary</item>

        <!-- Customize additional dark theme colors if needed -->
        <item name="android:navigationBarColor">@color/primaryDark</item> <!-- Optional, dark bottom navigation bar -->
        <!-- Optional, text link color in dark mode -->
    </style>
</resources>
